{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ],
      "secrets/*": [ "secrets/*" ]
    },
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}

